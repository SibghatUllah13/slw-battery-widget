<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/relativeLayoutRoot" android:layout_height="fill_parent" android:layout_width="fill_parent" android:layout_margin="5dip">
        <ImageView android:src="@drawable/sd_smart" android:layout_height="wrap_content" android:id="@+id/imageViewStorage" android:layout_width="wrap_content" android:layout_centerHorizontal="true" android:layout_centerVertical="true"></ImageView>
        <LinearLayout android:id="@+id/linearLayout1" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_centerHorizontal="true" android:layout_centerVertical="true" android:layout_width="fill_parent">
            <TextView android:text="@string/loading" android:id="@+id/tv_left" android:layout_height="wrap_content" android:textColor="#ffffff" android:layout_width="fill_parent" android:layout_weight="1" android:gravity="center_horizontal" android:textSize="11dip"></TextView>
            <TextView android:text="@string/loading" android:id="@+id/tv_right" android:layout_height="wrap_content" android:textColor="#ffffff" android:layout_width="fill_parent" android:layout_weight="1" android:gravity="center_horizontal" android:textSize="11dip"></TextView>
        </LinearLayout>
        <LinearLayout android:id="@+id/linearLayout2" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_width="fill_parent" android:layout_centerHorizontal="true" android:layout_centerVertical="true" android:layout_below="@+id/linearLayout1">
            <TextView android:layout_height="wrap_content" android:id="@+id/tv_leftUnit" android:text="MB" android:layout_width="fill_parent" android:layout_weight="1" android:gravity="center_horizontal"></TextView>
            <TextView android:layout_height="wrap_content" android:id="@+id/tv_rightUnit" android:text="MB" android:layout_width="fill_parent" android:layout_weight="1" android:gravity="center_horizontal"></TextView>
        </LinearLayout>
    </RelativeLayout>

